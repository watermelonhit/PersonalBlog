<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
这个xml相当于EmployeeDao的实现类
namespace：EmployeeDao的全类名
id：方法名
-->
<mapper namespace="com.watermelonhit.admin.mapper.PermissionMapper">

    <select id="listPermission" resultType="com.watermelonhit.admin.dao.Permission">
        select * from ms_permission
         <where>
             1=1
            <if test="queryString != null">
                and name=#{queryString}
            </if>
             <if test="adminId != null">
                 and id in (select permission_id as id from ms_admin_permission where admin_id=#{adminId})
             </if>
        </where>
    </select>
</mapper>

